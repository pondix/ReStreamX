FROM golang:1.22 AS build
WORKDIR /src
COPY go.mod go.sum ./
RUN go mod download
COPY ledger ./ledger
RUN CGO_ENABLED=0 go build -o /out/restreamx-ledgerd ./ledger/cmd/restreamx-ledgerd

FROM gcr.io/distroless/base-debian12
WORKDIR /
COPY --from=build /out/restreamx-ledgerd /usr/local/bin/restreamx-ledgerd
EXPOSE 7000 7001
ENTRYPOINT ["/usr/local/bin/restreamx-ledgerd"]
